        box-shadow none
        outline none

.mtop16
	margin-top 16px
	       
.mtop32
	margin-top 32px

nav
    background-color #fff
    border-bottom 2px solid color1

    .navbar-brand
        img
            width 225px

    .navbar-nav
        li.nav-item
            a.nav-link
                border 1px solid #fff
                border-radius 4px
                color #000
                font-size .9em
                font-weight bold
                margin-right 4px
                padding 5px 16px !important
                &:hover
                    color color3

            a.btn
                border 1px solid color1
                color #000
                &:hover
                    background-color color2

            ul.dropdown-menu
                border-radius 0px 0px 4px 4px
                background-color #fff
                border 0px
                top 136% !important //ordenar el men√∫ en hola: nombre del usuario
                li
                    border-bottom 1px solid #fff
                    a
                        color #000
                        display block
                        float none
                        width 100%
                        i
                        	color color3
                    &:last-child
                        border-bottom 0px
                    &:hover
                    	background-color #c4c4c4

        li.link-acc
            overflow hidden

            a
                display inline-block
                float left
                margin-right 0px !important

                &:first-child
                    border-radius 4px 0px 0px 4px
                    border-right 1px solid #fff

                &:last-child
                    border-radius 0px 4px 4px 0px

                img
                    position relative
                    top -1px
                    margin-right 6px
                    width 24px

        li.link-user
            overflow initial

            a
                border 0px !important

                &:hover
                    background-color transparent !important
